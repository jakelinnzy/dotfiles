// vi: ft=jsonc
{
  "json.schemas": [
    {
      "fileMatch": ["coc-settings.json"],
      "schema": { "allowTrailingCommas": true }
    }
  ],
  // -- coc
  "coc.preferences.jumpCommand": "tab drop",
  "snippets.extends": {
    "cpp": ["c"]
  },
  // -- coc diagnostics
  "diagnostic.enable": true,
  "diagnostic.level": "hint",
  "diagnostic.messageTarget": "float",
  "diagnostic.refreshAfterSave": true,
  // "diagnostic.virtualText": true,
  "diagnostic.errorSign": "ðŸ”´",
  "diagnostic.warningSign": "ðŸŸ ",
  "diagnostic.infoSign": "ðŸŸ¢",
  "diagnostic.hintSign": "ðŸ”µ",
  // -- Python
  // This enables Microsoft's Python Language Server
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintUseMinimalCheckers": false,
  "python.linting.pylintPath": "python3 -m pylint",
  // -- C/C++
  "clangd.arguments": ["-header-insertion=never"],
  "clangd.fallbackFlags": ["-Wall", "-Ilib"],
  // -- TSServer
  "tsserver.formatOnType": false,
  // -- Prettier
  "prettier.formatterPriority": 1,

  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    },
    "digestif": {
      "command": "digestif",
      "filetypes": ["tex", "plaintex", "context"]
    }
  }
}
